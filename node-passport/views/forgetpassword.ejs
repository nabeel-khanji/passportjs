<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3">
        <i class="fas fa-user-plus"></i> Forget Password
      </h1>
      <%- include("./partials/messages"); %>
      <form action="/users/forgetpassword" method="POST"> 
        <div class="m-2 form-group">
          <label for="email">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            class="form-control"
            placeholder="Enter Email"
            value="<%= typeof email != 'undefined' ? email : '' %>"
          />
        </div>
     <button type="submit" class="m-2 btn btn-primary btn-block">
          Forget Password
        </button>
      </form>
      <p class="lead m-2">Have An Account? <a href="/users/login">Login</a></p>
    </div>
  </div>
</div>
