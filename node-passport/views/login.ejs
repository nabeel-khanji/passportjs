<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center m-2"><i class="fas fa-sign-in-alt"></i> Login</h1>
      <%- include("./partials/messages"); %>
      <form action="/users/login" method="POST">
        <div class="m-2 form-group">
          <label for="email">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            class="form-control"
            placeholder="Enter Email"
          />
        </div>
        <div class="m-2 form-group">
          <label for="password">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-control"
            placeholder="Enter Password"
          />
        </div>
        <button type="submit" class="m-2 btn btn-primary btn-block">
          Login
        </button>
      </form>
      <p class="lead m-2 ">No Account? <a href="/users/register">Register</a></p>
    </div>
  </div>
</div>
