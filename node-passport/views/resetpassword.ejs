<div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h1 class="text-center mb-3">
          <i class="fas fa-user-plus"></i> Reset Password
        </h1>
        <%- include("./partials/messages"); %>
        <form action="<%`/users/${_id}/resetpassword${token}`%>" method="POST">
          <div class="m-2 form-group">
            <label for="email">Password</label>
            <input
              type="password"
              id="password"
              name="password"
              class="form-control"
              placeholder="Enter Password"
              value="<%= typeof email != 'undefined' ? email : '' %>"
            />
          </div>
       <button type="submit" class="m-2 btn btn-primary btn-block">
            Reset Password
          </button>
        </form>
      
      </div>
    </div>
  </div>
  